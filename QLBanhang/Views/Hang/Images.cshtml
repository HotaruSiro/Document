@using QLBanhang.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Image>
@{
    ViewBag.Title = "Images";
    Layout = "~/Views/_LayoutUser.cshtml";
}

<section class="ftco-section ftco-bread">
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-md-8 ftco-animate">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Collection</span></p>
                <h1 class="bread">My Collection</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section-3">
    <div class="photograhy">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 ftco-animate">
                    <a href="@item.Id_image" class="photography-entry img image-popup d-flex justify-content-start align-items-end" style="background-image: url(@item.Id_image);">
                        <div class="overlay"></div>
                        <div class="text ml-4 mb-4">
                            <h3>@item.Name_Image</h3>
                            <span class="tag">@item.Date</span>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
</section>