@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Quản lý Natruliss</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
        ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Admin_Layout/logo_HP.png">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/bootstrap.min.css">
    <!-- font awesome CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/font-awesome.min.css">
    <!-- owl.carousel CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Admin_Layout/css/owl.theme.css">
    <link rel="stylesheet" href="~/Admin_Layout/css/owl.transitions.css">
    <!-- animate CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/animate.css">
    <!-- normalize CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/normalize.css">
    <!-- mCustomScrollbar CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/scrollbar/jquery.mCustomScrollbar.min.css">
    <!-- wave CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/wave/waves.min.css">
    <!-- Notika icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/notika-custom-icon.css">
    <!-- main CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/main.css">
    <!-- style CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/style.css">
    <!-- responsive CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Admin_Layout/css/responsive.css">
    <!-- modernizr JS
        ============================================ -->
    <script src="~/Admin_Layout/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <div class="login-content">
        <!-- Login -->
        <div class="nk-block toggled" id="l-login">

            <div class="nk-form">
                <h4 style="color:orangered;text-align:center">
                    @ViewBag.Thongbao
                </h4>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div class="input-group">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-support"></i></span>
                        <div class="nk-int-st">
                            <input type="text" name="username" class="form-control" placeholder="Username">
                            <i style="color:red">@ViewData["Loi1"]</i>
                        </div>
                    </div>
                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></span>
                        <div class="nk-int-st">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                            <i style="color:red">@ViewData["Loi2"]</i>
                        </div>
                    </div>
                    <div class="fm-checkbox"></div>
                    <button class="btn-primary btn-md btn-block btn notika-add-todo waves-effect" type="submit">ĐĂNG NHẬP</button>
                      }
            </div>
        </div>
    </div>
    <!-- Login Register area End-->
    <!-- jquery
        ============================================ -->
    <script src="~/Admin_Layout/js/vendor/jquery-1.12.4.min.js"></script>
    <!-- bootstrap JS
        ============================================ -->
    <script src="~/Admin_Layout/js/bootstrap.min.js"></script>
    <!-- wow JS
        ============================================ -->
    <script src="~/Admin_Layout/js/wow.min.js"></script>
    <!-- price-slider JS
        ============================================ -->
    <script src="~/Admin_Layout/js/jquery-price-slider.js"></script>
    <!-- owl.carousel JS
        ============================================ -->
    <script src="~/Admin_Layout/js/owl.carousel.min.js"></script>
    <!-- scrollUp JS
        ============================================ -->
    <script src="~/Admin_Layout/js/jquery.scrollUp.min.js"></script>
    <!-- meanmenu JS
        ============================================ -->
    <script src="~/Admin_Layout/js/meanmenu/jquery.meanmenu.js"></script>
    <!-- counterup JS
        ============================================ -->
    <script src="~/Admin_Layout/js/counterup/jquery.counterup.min.js"></script>
    <script src="~/Admin_Layout/js/counterup/waypoints.min.js"></script>
    <script src="~/Admin_Layout/js/counterup/counterup-active.js"></script>
    <!-- mCustomScrollbar JS
        ============================================ -->
    <script src="~/Admin_Layout/js/scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
    <!-- sparkline JS
        ============================================ -->
    <script src="~/Admin_Layout/js/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/Admin_Layout/js/sparkline/sparkline-active.js"></script>
    <!-- flot JS
        ============================================ -->
    <script src="~/Admin_Layout/js/flot/jquery.flot.js"></script>
    <script src="~/Admin_Layout/js/flot/jquery.flot.resize.js"></script>
    <script src="~/Admin_Layout/js/flot/flot-active.js"></script>
    <!-- knob JS
        ============================================ -->
    <script src="~/Admin_Layout/js/knob/jquery.knob.js"></script>
    <script src="~/Admin_Layout/js/knob/jquery.appear.js"></script>
    <script src="~/Admin_Layout/js/knob/knob-active.js"></script>
    <!--  Chat JS
        ============================================ -->
    <script src="~/Admin_Layout/js/chat/jquery.chat.js"></script>
    <!--  wave JS
        ============================================ -->
    <script src="~/Admin_Layout/js/wave/waves.min.js"></script>
    <script src="~/Admin_Layout/js/wave/wave-active.js"></script>
    <!-- icheck JS
        ============================================ -->
    <script src="~/Admin_Layout/js/icheck/icheck.min.js"></script>
    <script src="~/Admin_Layout/js/icheck/icheck-active.js"></script>
    <!--  todo JS
        ============================================ -->
    <script src="~/Admin_Layout/js/todo/jquery.todo.js"></script>
    <!-- Login JS
        ============================================ -->
    <script src="~/Admin_Layout/js/login/login-action.js"></script>
    <!-- plugins JS
        ============================================ -->
    <script src="~/Admin_Layout/js/plugins.js"></script>
    <!-- main JS
        ============================================ -->
    <script src="~/Admin_Layout/js/main.js"></script>
</body>
</html>

