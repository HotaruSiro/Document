                                    </div>
                                    <div class="nk-int-st">
                                        @Html.DropDownListFor(model => model.Mac, new SelectList(new[]{
                                          new { Value = "", Text = "--không--" },
                                          new { Value = "true", Text = "Mới" },
                                          new { Value = "false", Text = "Giảm giá" },},
                                          "Value",
                                          "Text", Model), new { @class = "form-control", @Onclick = "javascript:yesnoCheck()" })
