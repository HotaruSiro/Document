@using QLBanhang.Models
@using PagedList.Mvc;
@model PagedList.PagedList<QLBanhang.Models.MATHANG>

@{
    ViewBag.Title = "Hang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    Admin kh = (Admin)Session["Taikhoanadmin"];
}
@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}


<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>SẢN PHẨM</h2>
                                    <p>Chào mừng đền với sản phẩm <span class="bread-ntd">Natruliss</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="notika-icon notika-sent"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<style>
    .den .dataTables_length, .dataTables_filter, .dataTables_info, .dataTables_paginate, .paging_simple_numbers {
        display: none !important;
    }

</style>
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Xem sản phẩm</h2>
                        <p>Yêu cầu các quản trị viên bảo mật thông tin cá nhân riêng tư của khách hàng.</p>
                    </div>
                    <div class="table-responsive den">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm </th>
                                    <th>Giá bán  </th>
                                    <th>Công dụng    </th>
                                    <th>Ảnh bìa  </th>
                                    <th>Cách dùng   </th>
                                    <th>Xuất xứ  </th>
                                    <th>Ngày cập nhật </th>
                                    <th>SL.Tồn </th>
                                    <th>Tên chủ đề   </th>
                                    <th>Tên NCC   </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenMH)
                                            <a class="btn-primary btn-md btn-block btn notika-add-todo waves-effect" type="submit" href="@Url.Action("ChitietMH","Admin",new { id = item.MaMH })">Xem</a>
                                            <a class="btn-primary btn-md btn-block btn notika-add-todo waves-effect" type="submit" href="@Url.Action("SuaMH","Admin",new { id = item.MaMH })">Sửa</a>
                                            <a class="btn-primary btn-md btn-block btn notika-add-todo waves-effect" type="submit" href="@Url.Action("XoaMH","Admin",new { id = item.MaMH })">Xóa</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Giaban)
                                        </td>
                                        <td>
                                            @Truncate(item.Mota, 150)
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/Hinhanh/" + item.Anhbia)" width="1600" />
                                        </td>
                                        <td>
                                            @Truncate(item.Cachdung, 150)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Xuatxu)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ngaycapnhap)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Soluongton)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CHUDE.TenChuDe)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NHACUNGUNG.TenNCC)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Tên sản phẩm </th>
                                    <th>Giá bán  </th>
                                    <th>Công dụng    </th>
                                    <th>Ảnh bìa  </th>
                                    <th>Cách dùng   </th>
                                    <th>Xuất xứ  </th>
                                    <th>Ngày cập nhật </th>
                                    <th>SL.Tồn </th>
                                    <th>Tên chủ đề   </th>
                                    <th>Tên NCC   </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="col-md-4 col-sm-4 items-info"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</font></font></div>
                    <div class="col-md-8 col-sm-8">
                        <ul class="pull-right">
                            <li><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> @Html.PagedListPager(Model, page => Url.Action("Hang", new { page = page }))</font></font></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
