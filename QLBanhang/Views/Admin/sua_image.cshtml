@model QLBanhang.Models.Image

@{
    ViewBag.Title = "sua_image";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-form"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>IMAGES</h2>
                                    <p>Chào mừng đền với sản phẩm <span class="bread-ntd">Natruliss</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="notika-icon notika-sent"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Sửa Image</h2>
                        <p>Yêu cầu các quản trị viên bảo mật thông tin cá nhân riêng tư của khách hàng.</p>
                        @Html.ActionLink("Trở về", "xem_images")
                    </div>
                    <div class="table-responsive">
                        @using (Html.BeginForm("sua_image", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)
                            <div class="form-group">
                                <p class="control-label col-md-2">Tên image</p>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name_Image, new { htmlAttributes = new { @class = "form-control" } })<br />
                                    @Html.ValidationMessageFor(model => model.Name_Image, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <p class="control-label col-md-2">URL image</p><br />
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Id_image, new { htmlAttributes = new { @class = "form-control" } })<br />
                                    @Html.ValidationMessageFor(model => model.Id_image, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <p class="control-label col-md-2">Ngày sửa</p><br />
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.Date.Value.ToString("yyyy-MM-dd") } }) <br />
                                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <p class="control-label col-md-2">Theo mặt hàng</p><br />
                                <div class="col-md-10">
                                    @Html.DropDownList("MaMH", null, String.Empty, new { @class = "form-control" })
                                    @*@Html.DropDownList("MaMH")*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="padding-top: 25px;">
                                    <input type="submit" value="Lưu" class="btn btn-default" />
                                </div>
                            </div>
                        }
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>