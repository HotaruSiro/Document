@model QLBanhang.Models.CTDONHANG
@{
    ViewBag.Title = "XoaDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>ĐƠN HÀNG</h2>
                                    <p>Chào mừng đền với sản phẩm <span class="bread-ntd">Natruliss</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="notika-icon notika-sent"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>BẠN CHẮC CHẮN MUỐN XÓA ĐƠN HÀNG NÀY ?</h2>
                        <p>XÁC NHẬN THÔNG TIN ĐƠN HÀNG MUỐN XÓA.</p>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th> Mã đơn đặt hàng</th>
                                    <th> Mã mặt hàng</th>
                                    <th> Đơn giá</th>
                                    <th> Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.MaDDH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.MaMH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Dongia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Soluong)
                                    </td>
                                    @Html.ActionLink("Quay lại", "Donhang")
                                </tr>
                            </tbody>
                        </table>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <button class="btn-primary btn-md btn-block btn notika-add-todo waves-effect" type="submit">Xóa đơn hàng</button>
            </div>
        }
    </div>
</div>
